# ====================================
# AUTO-SWEEP LOYALTY SYSTEM
# Environment Configuration Template
# ====================================

# ---- APPLICATION SETTINGS ----
APP_NAME=auto-sweep-loyalty-platform
APP_ENV=development
DEBUG=true
API_VERSION=v1
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ---- SERVER CONFIGURATION ----
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_DASHBOARD_PORT=3000
FRONTEND_CUSTOMER_PORT=3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ---- DATABASE CONFIGURATION ----
DATABASE_URL=postgresql://user:password@localhost:5432/loyalty_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=loyalty_db
DB_USER=user
DB_PASSWORD=password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ---- REDIS CONFIGURATION ----
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ---- PAYMENT PROCESSORS ----

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Venmo (via Braintree)
VENMO_MERCHANT_ID=your_venmo_merchant_id
VENMO_PUBLIC_KEY=your_venmo_public_key
VENMO_PRIVATE_KEY=your_venmo_private_key

# Cash App
CASHAPP_CLIENT_ID=your_cashapp_client_id
CASHAPP_CLIENT_SECRET=your_cashapp_client_secret
CASHAPP_WEBHOOK_SECRET=your_cashapp_webhook_secret

# Chime (via Plaid or direct integration)
CHIME_CLIENT_ID=your_chime_client_id
CHIME_SECRET=your_chime_secret

# Zelle (via bank integration)
ZELLE_PARTNER_ID=your_zelle_partner_id
ZELLE_API_KEY=your_zelle_api_key

# Cryptocurrency (Coinbase Commerce or similar)
CRYPTO_API_KEY=your_crypto_api_key
CRYPTO_WEBHOOK_SECRET=your_crypto_webhook_secret
CRYPTO_SUPPORTED=BTC,ETH,USDC,USDT

# ---- FACEBOOK / MESSENGER INTEGRATION ----
FB_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FB_APP_ID=your_facebook_app_id
